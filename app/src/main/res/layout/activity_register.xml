<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.webwemser.letsmeetapp.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="48sp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/user_hint"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:lines="1"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:maxLength="20"
        android:id="@+id/username_reg"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pw_hint"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:lines="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:maxLength="20"
        android:id="@+id/password_reg"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password_retype"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:lines="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:maxLength="20"
        android:id="@+id/password_reg_retype"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description_hint"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:lines="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:maxLength="80"
        android:id="@+id/description_reg"/>

    <CheckedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/save_credentials"
        android:textSize="20sp"
        android:id="@+id/check1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="@color/black"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="true"
        android:clickable="true"/>

    <CheckedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_login"
        android:textSize="20sp"
        android:id="@+id/check2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="@color/black"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="true"
        android:clickable="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="@string/signup"
        android:textColor="@color/white"
        android:background="@drawable/mybutton"
        android:onClick="signup"/>

</LinearLayout>
